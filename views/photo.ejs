<%- include('partials/_header') -%>

<body>
	<div class="tm-page-wrap mx-auto">
		<div class="position-relative">

            <%- include('partials/_navigation') -%>

			<div class="tm-welcome-container tm-fixed-header tm-fixed-header-1">
				<div class="text-center">
					<p class="pt-5 px-3 tm-welcome-text tm-welcome-text-2 mb-1 text-white mx-auto">Background image can be fixed. Content will simply slide over.</p>                	
				</div>                
            </div>

			<!-- Header image -->
            <div id="tm-fixed-header-bg"></div> 
		</div>

		<!-- Page content -->
		<div class="container-fluid">
			<div class="mx-auto tm-content-container">
				<main>
					<div class="row mb-5 pb-4">
						<div class="col-12 text-center">
							<img src="<%= photo.image %>" alt="Image" class="img-fluid tm-catalog-item-img">
						</div>
					</div>
					<div class="row mb-5 pb-5">
						<div class="col-xl-12 col-lg-7">
							<!-- Video description -->
							<div class="tm-video-description-box text-center">
								<h2 class="mb-5 tm-video-title"> <%= photo.title %> </h2>
								<p class="mb-4"><%= photo.description %></p>	
							</div>							
						</div>
						<div class="col-xl-12 col-lg-5">
							<!-- Share box -->
                            <div class="tm-bg-gray tm-share-box d-flex  justify-content-around">
                                <div class="text-center">
                                    <a href="/photos/edit/<%=photo._id%>" data-bs-dismiss="modal" 
                                    class="btn btn-primary btn-lg text-uppercase d-inline float-left">
                                   <span>Update Details</span></a>	
                                </div>

                                <div class="text-center">
                                    <a href="/photos/<%=photo._id%>?_method=DELETE" 
                                    class="btn btn-danger m-2 btn-lg text-uppercase d-inline float-right"  
                                    onclick="return confirm('ARE YOU SURE?')">
                                    <span>Delete Photo</span></a>	
                                </div>
                               							
                            </div>
						</div>
					</div>
				</main>

                <%- include('partials/_footer') -%>

</body>
</html>